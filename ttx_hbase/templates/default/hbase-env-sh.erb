# Set hbase environment variables here.

export HBASE_HOME="<%=  node[:ttx_hbase][:hbase][:home] %>"
export HBASE_CONF_DIR="<%=  node[:ttx_hbase][:hbase][:conf] %>"
export HBASE_LOG_DIR=<%= node[:ttx_hbase][:hbase][:log_dir] %>
export HBASE_PID_DIR=<%= node[:ttx_hbase][:hbase][:pid_dir] %>
export HBASE_IDENT_STRING=<%= node[:ttx_hbase][:hbase][:user] %>

export HBASE_HEAPSIZE=3000
export HBASE_OPTS="-ea -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=$HBASE_LOG_DIR -XX:CMSInitiatingOccupancyFraction=70 -XX:+UseConcMarkSweepGC -XX:+UseParNewGC -XX:+CMSIncrementalMode -verbose:gc -XX:+PrintGCDetails -XX:+PrintGCTimeStamps -Xloggc:$HBASE_LOG_DIR/gc-hbase.log"
export HBASE_NICENESS=10
export HBASE_MANAGES_ZK=<%= node[:ttx_hbase][:hbase][:manage_zk] %>


export JAVA_HOME="<%= node[:ttx_hbase][:java][:home] %>"
