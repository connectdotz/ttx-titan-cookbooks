. /lib/lsb/init-functions
. <%= node[:ttx_hbase][:hadoop][:conf] %>/hadoop-env.sh

cd $HADOOP_HOME

# set the ulimit to 32768 because hadoop needs lots of open files
ulimit -n 32768

function start {
    su -l -c ". <%= node[:ttx_hbase][:hadoop][:conf] %>/hadoop-env.sh; $HADOOP_HOME/bin/hadoop-daemon.sh --config $HADOOP_CONF_DIR start <%= @script_service %>"  
}

function stop {
    su -l -c ". <%= node[:ttx_hbase][:hadoop][:conf] %>/hadoop-env.sh; $HADOOP_HOME/bin/hadoop-daemon.sh --config $HADOOP_CONF_DIR stop <%= @script_service %>" 
}

function reload {
    stop
    start
}

function status {
    log_warning_msg "Status is not supported"
}

case $1 in
    'start' )
	start
	;;
    'stop' )
	stop
	;;
    'restart' )
	stop
	start
	;;
    'force-reload' )
	reload
	;;
    'status' )
	status
	;;
    *)
	echo "usage: `basename $0` {start|stop|status}"
esac 

exit 0 

