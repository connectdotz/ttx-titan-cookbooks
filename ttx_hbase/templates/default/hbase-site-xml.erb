<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
	<property>
    	<name>dfs.support.append</name>
    	<value>true</value>
  	</property>

	<property>
    	<name>hbase.snapshot.enabled</name>
    	<value>true</value>
  	</property>

	<property>
    	<name>hbase.rootdir</name>
    	<value><%= (node[:ttx_hbase][:hbase][:root_dir] || node[:ttx_hbase][:hbase][:_root_dir]) %></value>
  	</property>

  	<property>
    	<name>hbase.tmp.dir</name>
    	<value><%= node[:ttx_hbase][:hbase][:tmp_dir] %></value>
  	</property>

  	<property>
    	<name>hbase.regionserver.handler.count</name>
    	<value><%= node[:ttx_hbase][:regionserver][:handler_count] %></value>
  	</property>

  	<property>
    	<name>hbase.zookeeper.property.dataDir</name>
    	<value><%= node[:ttx_hbase][:zookeeper][:data_dir] %></value>
  	</property>

  	<property>
    	<name>hbase.cluster.distributed</name>
    	<value>true</value>
  	</property>

  	<property>
    	<name>hbase.zookeeper.quorum</name>
    	<value><%= node[:ttx_hbase][:zookeeper][:quorum].join(",") %></value>
  	</property>

  	<property>
    	<name>hbase.master.dns.interface</name>
    	<value>eth0</value>
  	</property>

  	<property>
    	<name>hbase.regionserver.dns.interface</name>
    	<value>eth0</value>
  	</property>

  	<property>
    	<name>hbase.zookeeper.dns.interface</name>
    	<value>eth0</value>
  	</property>

</configuration>
